<phpunit bootstrap="./Bootstrap.php"
         strict="true"
         colors="true"
         stopOnFailure="false"
         syntaxCheck="true"
         timeoutForSmallTests="160"
         timeoutForMediumTests="360"
         timeoutForLargeTests="600"
        >
    <testsuites>
        <testsuite name="CPMS Common Test Suite">
            <directory>./CpmsCommonTest</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">../src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="./coverage-report" charset="UTF-8"
             yui="true" highlight="true" lowUpperBound="50"
             highLowerBound="80"/>
    </logging>
</phpunit>
